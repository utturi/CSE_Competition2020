<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back_button" />

    <TextView
        android:id="@+id/selcet_expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font"
        android:text="표정 선택"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/imcre_soojin"
        android:text="getBetter"
        android:textColor="@color/primary_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/gameName"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/font"
        android:text="홍길동"
        android:textColor="@color/primary_text"
        android:textSize="17sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/happy_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/selcet_expression"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/font"
        android:text="기쁨"
        android:textSize="30sp"
        app:cornerRadius="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sad_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/happy_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/font"
        android:text="슬픔"
        android:textSize="30sp"
        app:cornerRadius="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/surprised_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/sad_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/font"
        android:text="놀람"
        android:textSize="30sp"
        app:cornerRadius="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/angry_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/surprised_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/font"
        android:text="화남"
        android:textSize="30sp"
        app:cornerRadius="20dp" />

</RelativeLayout>