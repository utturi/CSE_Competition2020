<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font"
        android:text="게임 종료"
        android:textColor="@color/primary_text"
        android:textSize="35sp" />
    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/imcre_soojin"
        android:text="getBetter"
        android:textColor="@color/primary_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/gameName"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/font"
        android:text="홍길동"
        android:textColor="@color/primary_text"
        android:textSize="17sp" />
    <ImageView android:id="@+id/game_result_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/game_over"
        android:src="@drawable/goodjob"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/game_result_explain"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@id/game_result_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/font"
        android:onClick="onClick"
        android:text="결과 보기"
        android:textSize="30sp"
        app:cornerRadius="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/game_back_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/game_result_explain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:onClick="onClick"
        android:text="돌아 가기"
        android:textSize="30sp"
        app:cornerRadius="20dp" />

</RelativeLayout>