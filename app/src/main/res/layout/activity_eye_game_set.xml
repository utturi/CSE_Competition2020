<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageGuide"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/imageViewInput"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_image_wow" />

    <ImageView
        android:id="@+id/imageViewInput"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_image_search"/>

    <Button android:id="@+id/game1guide_button"
        android:onClick="onClick"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_below="@id/imageViewInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="게임 설명"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button android:id="@+id/game1start_button"
        android:onClick="onClick"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_below="@id/game1guide_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="게임 시작"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>