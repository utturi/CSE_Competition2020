<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/game2count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/imcre_soojin"
        android:text="@string/_1_5"
        android:textColor="@color/primary_text"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/game2iamge_view"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/game2count"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/game2answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game2iamge_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/imcre_soojin"
        android:text="개구리"
        android:textColor="@color/primary_text"
        android:textSize="50sp" />

</RelativeLayout>